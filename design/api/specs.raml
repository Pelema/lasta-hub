/short-summary:
    displayName: Quick overview of programmes
    description: provide a short summary of recent programmes. The response should contain
                the latest 5 in-progress, due for review and recently approved programmes
    get:
        description: Return the 5 in-progress, due for review and recently approved programmes
        responses:
            404:
                description: Data not found
                body:
                    application/json:
                        example: |
                            {
                                "message": "Programme Data Not Found"
                            }
            200:
                body:
                    application/json:
                        example: |
                          {
                            "in-progress": [
                                {
                                    "faculty": "Computing and Informatics",
                                    "department": "Computer Science",
                                    "programme": "Data Science"
                                }
                            ],
                            "due-for-review": [
                                {
                                    "faculty": "Engineering",
                                    "department": "Spatial Sciences",
                                    "programme": "Radio Astronomy"
                                }
                            ],
                            "recently-approved": [
                                {
                                    "faculty": "Humanities",
                                    "department": "Linguistic",
                                    "programme": "Semiotics in Languages"
                                }
                            ]
                          }

/need-analysis:
    /start:
        displayName: Start Need Analysis
        description: Start the process of a curriculum development by analyzing the needs
        post:
            description: Start the engine for a curriculum development workflow
            body:
                application/json:
                    example: |
                        {
                            "facultyCode": "fci",
                            "departmentCode": "CSI",
                            "programme": {
                                "renewal": "false",
                                "label": "Complex Systems"
                            }
                        }
            responses:
                201:
                    body:
                        application/json:
                            example: |
                                {
                                    "programmeId": "aa346774-dadaeff90-34390089"
                                }
                400:
                    body:
                        application/json:
                            example: |
                                {
                                    "message": "Bad Request"
                                }
                500:
                    body:
                        application/json:
                            example: |
                                {
                                    "message": "Internal Error"
                                }
    /consult:
        displayName: Consultations
        description: Consult with organizations during the need analysis process
        post:
            description: Record information about all consultations conducted during need analysis
            body:
                application/json:
                    example: |
                        {
                            "date": "2016-06-14",
                            "organization": {
                                    "designation": "NamPower",
                                    "address": "5 Storch Street"
                            },
                            "attendance": ["Peter St James", "Wilson Ekandjo"],
                            "minutes-file-name": "relative/file/path",
                            "programmeId": "aa346774-dadaeff90-34390089"
                        }
            responses:
                201:
                    body:
                        application/json:
                            example: |
                                {
                                    "result": "ok"
                                }
                400:
                    body:
                        application/json:
                            example: |
                                {
                                    "message": "Bad Request"
                                }
                500:
                    body:
                        application/json:
                            example: |
                                {
                                    "message": "Internal Error"
                                }
    /conclude:
        displayName: Need Analysis Results
        description: Report on the results of the various consultations during the need analysis
        post:
            description: Report the final decision of the need analysis process
            body:
                application/json:
                    example: |
                        {
                            "decision": "proceed",
                            "programmeId": "aa346774-dadaeff90-34390089"
                        }
            responses:
                201:
                    body:
                        application/json:
                            example: |
                                {
                                    "result": "ok"
                                }
                400:
                    body:
                        application/json:
                            example: |
                                {
                                    "message": "Bad Request"
                                }
                500:
                    body:
